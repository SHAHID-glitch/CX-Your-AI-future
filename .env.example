# Environment Configuration
NODE_ENV=development
PORT=3000

# Database Configuration (MongoDB)
MONGODB_URI=mongodb://localhost:27017/copilot-db
# For MongoDB Atlas: mongodb+srv://YOUR_USERNAME:YOUR_PASSWORD@YOUR_CLUSTER.mongodb.net/YOUR_DATABASE

# API Keys
OPENAI_API_KEY=your_openai_api_key_here
# Get your key from: https://platform.openai.com/api-keys

# JWT Secret (generate a random string)
JWT_SECRET=your_jwt_secret_key_here

# Google OAuth Configuration
# Get credentials from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/api/auth/google/callback

# GitHub OAuth Configuration
# Get credentials from: https://github.com/settings/developers
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_CALLBACK_URL=http://localhost:3000/api/auth/github/callback

# File Upload
MAX_FILE_SIZE=52428800
# 50MB in bytes

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
# 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
# For production, set to your frontend domain

# Session Configuration
SESSION_SECRET=your_session_secret_here

# Email Configuration (optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password

# Redis Configuration (optional - for caching)
REDIS_URL=redis://localhost:6379

# Frontend URL
FRONTEND_URL=http://localhost:3000

# ============================================
# AI Service Configuration
# ============================================

# Hugging Face API (for image generation - primary)
HUGGINGFACE_API_KEY=hf_your_huggingface_api_key_here
# Get your key from: https://huggingface.co/settings/tokens

# Optional: Custom Hugging Face image model
HF_IMAGE_MODEL=black-forest-labs/FLUX.1-schnell

# Stable Diffusion Local API (fallback for image generation)
SD_ENABLED=true
SD_API_URL=http://127.0.0.1:7860
# Make sure to start Stable Diffusion WebUI with --api flag

# Azure OpenAI (optional - alternative AI provider)
AZURE_OPENAI_API_KEY=your_azure_openai_key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_DEPLOYMENT_NAME=your-deployment-name
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Groq API (fast LLM inference)
GROQ_API_KEY=your_groq_api_key_here
# Get your key from: https://console.groq.com/keys
